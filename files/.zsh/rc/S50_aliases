function is_command() {
    command -v $1 > /dev/null
}

# {{{ Global aliases

alias -g G='|grep -i'
alias -g H='|head'
alias -g T='|tail'
alias -g L='|less'
alias -g LA='2>&1|less'
alias -g X='|xclip'
