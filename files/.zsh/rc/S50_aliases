alias -g NE='2>/dev/null'
alias -g NUL='&>/dev/null'
alias -g X='| xargs'
alias -g X1='| xargs -n 1'
alias -g XL='| tr "\n" "\0" | xargs -0'

alias -g A1="| awk '{print \$1}'"
