Include ~/.ssh/*.conf

HashKnownHosts no
# Enable automatic connection multiplexing by default.
ControlMaster auto
ControlPath ~/.ssh/.control.%n.%p.%r
ServerAliveInterval 60
TCPKeepAlive yes
Compression yes

Host 192.168.*.*
    StrictHostKeyChecking no
    UserKnownHostsFile /dev/null
    ForwardAgent yes

Host riga.bobov.name
    CheckHostIp no
